<!-- src/Acme/StoreBundle/Resources/config/doctrine/Product.orm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Metinet\AppBundle\Entity\Fact" table="fact">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="number"      column="number"       type="decimal" scale="2" />
        <field name="summary"     column="summary"      type="text" />
        <field name="authorEmail" column="author_email" type="string" />
        <field name="status"      column="status"       type="string" />
    </entity>
</doctrine-mapping>
